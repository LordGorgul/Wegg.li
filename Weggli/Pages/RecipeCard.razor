
<MudCard Style="height: 100%" Elevation="25" Class="border-solid border-1 rounded-lg">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Recipe.Name</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText>@Recipe.Description</MudText>
    </MudCardContent>
    <MudCardActions Class="align-bottom">
            <MudButton Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
        </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public Recipe? Recipe { get; set; }
}